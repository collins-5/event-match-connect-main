{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@assets/*": ["assets/*"]
    },
    "types": [
      "react",
      "react-native",
      "react-native-reanimated",
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}